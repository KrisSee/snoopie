{
  "manifest_version": 2,

  "name": "SnoopieFF",
  "short_name": "SnoopieFF",
  "description": "SnoopieFF lets you know when you're being recorded by popular tracking services.",
  "version": "0.1",
  "author": "Chris Clark (chris@alucu.com)",
  "homepage_url": "https://github.com/KrisSee/snoopie",

  "icons": {
    "16": "dog-16.png",
    "48": "dog-48.png",
    "128": "dog-128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Nothing detected yet",
    "default_icon": "dog-16.png"
  }
}
